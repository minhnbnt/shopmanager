{
  "name": "shopmanager",
  "version": "0.1-SNAPSHOT",
  "scripts": {
    "build": "pnpm build:css && pnpm build:liberty",
    "build:css": "tailwindcss -i ./src/main/tailwindcss/input.css -o ./src/main/webapp/resources/css/tailwind.css --minify",
    "build:liberty": "./mvnw liberty:package -Dinclude=runnable",
    "preview": "dotenv -- java -jar ./target/shopmanager.jar",
    "dev": "concurrently \"pnpm dev:css\" \"pnpm dev:liberty\"",
    "dev:css": "tailwindcss -i ./src/main/tailwindcss/input.css -o ./src/main/webapp/resources/css/tailwind.css --watch --map",
    "dev:liberty": "dotenv -- ./mvnw liberty:dev",
    "postinstall": "cpx \"./node_modules/basecoat-css/dist/js/*.min.js\" ./src/main/webapp/resources/js/basecoat",
    "clean": "./mvnw clean:clean"
  },
  "author": "minhnbnt",
  "packageManager": "pnpm@10.14.0",
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.15",
    "concurrently": "^9.2.1",
    "cpx2": "^8.0.0",
    "dotenv-cli": "^10.0.0"
  },
  "dependencies": {
    "basecoat-css": "^0.3.2",
    "tailwindcss": "^4.1.15"
  }
}
